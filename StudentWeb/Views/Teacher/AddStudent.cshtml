@model StudentWeb.ViewModel.TeacherViewModels.AddStudentViewModel

@{
    ViewData["Title"] = "AddStudent";
}

<h1>@Model.Title</h1>

@using (Html.BeginForm("AddStudent", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(modelItem => modelItem.IdCourse)
    <table class="table">
        <thead>
            <tr>
                <th>
                    Имя
                </th>
                <th>
                    Фамилия
                </th>
                <th>
                    Добавить?
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Students.Count(); i++)
            {
                @Html.HiddenFor(modelItem => modelItem.Students[i].Id)
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Students[i].Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Students[i].SurrName)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => modelItem.Students[i].Add)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
}
